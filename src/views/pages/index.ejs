<!DOCTYPE html>
<html lang="en">
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/productos.css">
</head>
<body>

  <header class="main-header"> <%- include('../partials/header') %> </header>
  
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="img/banner1.jpeg" class="d-block w-100" alt="banner 1" height="406,2">
      </div>
      <div class="carousel-item">
        <img src="img/banner2.jpeg" class="d-block w-100" alt="banner 2" height="406.2">
      </div>
      <div class="carousel-item">
        <img src="img/banner3.jpeg" class="d-block w-100" alt="banner 3" height="406.2">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  
  <section class="section-mas-vendidos">
      <h2>Mas vendidos</h2>
      <div class="div-mas-vendidos">
      <% if (productos.length >= 4 ) { %>
        <% for(let i = 0; i < 4; i++){ %> 
          <article><a href="/products/<%= productos[i].id_product %> ">
            <img src="/images/products/<%=productos[i].img%>" alt="">
            <div class="div-article">
              <% if(productos[i].descount <= 0){%> 
              <span class="precios">$<%=productos[i].price%></span>
              <% }else{ %> 
              <%let preciofinal = (productos[i].price - (productos[i].price * productos[i].discount / 100))%>
              <span>$<%=preciofinal.toFixed(2)%></span>
              <span class="discount"><%= productos[i].discount %>% OFF</span>
              <% } %> 
            </div>
            <h1 class="name"><%=productos[i].name%></h1>
          </a>
          </article>
        <% } %>
      <% }else{ %>
        <span>No hay suficientes productos cargados</span>
      <% } %> 
  </section>

  <section class="recomendados">
      <h2>Recomendados para vos!</h2>
      <div class="div-recomendados">
          <% if (productos.length >= 4) { %>
            <% for(let i = 0; i < 4; i++){ %> 
              <article><a href="/products/<%= productos[i].id %> "></a>
                <img src="/images/products/<%=productos[i].img%>" alt="">
                <div class="div-article">
                  <% if(productos[i].discount <= 0){%> 
                  <span class="precios">$<%=productos[i].price%></span>
                  <% }else{ %> 
                  <%let preciofinal = (productos[i].price - (productos[i].price * productos[i].discount / 100))%>
                  <span>$<%=preciofinal.toFixed(2)%></span>
                  <span class="discount"><%= productos[i].discount %>% OFF</span>
                  <% } %> 
                </div>
                <h1 class="name"><%=productos[i].name%></h1>
              </a>
              </article>
            <% } %>
          <% }else{ %>
            <span>No hay suficientes productos cargados</span>
          <% } %>
      </div>

  </section>

  <footer class="footer-home">
    <%- include('../partials/footer') %>

  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
